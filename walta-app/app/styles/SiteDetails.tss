
"#container": {
    horizontalWrap: false,
    width: Ti.UI.FILL,
    height: Ti.UI.FILL,
    left: "1%",
    top: "5%"
}

"#right" : {
    left: "2%",
    width: "40%",
    right: "2%"
}

"#left" : {
    width: "55%"
}

"#right[if=Alloy.Globals.isHighRes]" : {
    width: "45%"
}

"#left[if=Alloy.Globals.isHighRes]" : {
    width: "50%"
}


"#left[if=Alloy.Globals.isXHighRes]" : {
    width: "50%"
}

"#right[if=Alloy.Globals.isXHighRes]" : {
    width: "50%"
}

"#photoSelectWrapper" : {
    left: "2%",
    height: "70%"
}

"#nextWrapper": {
    bottom: "3%",
    right: "1%"
}

".labelText": {
    left: "1%",
    bottom: "1%",
    textAlign: Ti.UI.TEXT_ALIGNMENT_LEFT
}
".errorWrap": {
    borderWidth: "1dp",
    borderRadius: 10,
    bottom: "1%"
}
".errorWrap[if=Alloy.Globals.isHighRes]": {
    borderRadius: 25,
    borderWidth: "6dp",
}
".errorWrap[if=Alloy.Globals.isXHighRes]": {
    borderRadius: 50,
    borderWidth: "5px"
}
".tabs" : {
    width: "300dp",
    height: "40dp",
    bottom: "4dp",
    borderRadius: 6,
	borderColor: "#b4d2d9",
	selectedButtonColor: "#26849c",
	unselectedButtonColor: "#fff", 
	selectedButtonTextColor: "#fff",
	unselectedButtonTextColor: "#26849c",
	withDividers: true
}

".tabs[if=Alloy.Globals.isHighRes]": {
    width: "300dp",
    height: "40dp",
}

".tabs[if=Alloy.Globals.isXHighRes]": {
    width: "600dp",
    height: "70dp",
}

"#locationIndicator": {
    horizontalWrap: false,
    height: "50%",
    width: "75%"
}

"#locationStatus": {
    horizontalWrap: false,
    top: "2dp",
    left: "2dp"
}

"#locationIndicatorIcon": {
    image: "/images/location-icon.png",
    height: "32dp",
    width: "20dp",
    right: "4dp"
}