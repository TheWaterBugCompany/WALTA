
"#content": {
    scrollType: "horizontal"
}
"#wrapper2": {
    top: "1%",
    height: Ti.UI.SIZE
}

"#wrapper2[if=Alloy.Globals.isSmallHeight]" : {
    top: 0
}

"#wrapper2[if=Alloy.Globals.isPhablet]" : {
    top: "0.1%"
}

"#wrapper2[if=Alloy.Globals.isTablet]" : {
    top: "5%"
}

"#header": {
    layout: "composite",
    height: Ti.UI.SIZE
}

"#question": {
    left: null
}

"#content[platform=android]": {
    keyboardDismissMode: Ti.UI.Android.SOFT_KEYBOARD_HIDE_ON_FOCUSMODE_INTERACTIVE
}

"#content[platform=ios]": {
    horizontalBounce: "false",
    verticalBounce: "false",
    keyboardDismissMode: Ti.UI.iOS.KEYBOARD_DISMISS_MODE_INTERACTIVE
}

".textField" : {
    left: "8dp",
    width: "90dp",
    height: "40dp",
    keyboardType: Ti.UI.KEYBOARD_TYPE_DECIMAL_PAD,
    fullscreen: false
}

".textField[if=Alloy.Globals.isPhablet]" : {
    width: "110dp",
    height: "40dp",
}

".textField[if=Alloy.Globals.isTablet]" : {
    width: "210dp",
    height: "80dp",
}

"#footer": {
    height: Ti.UI.FILL,
    width: Ti.UI.FILL
}

".inputLabel": {
    textAlign: Ti.UI.TEXT_ALIGNMENT_CENTER,
    top: "0.5%",
    width: "90dp"
}

".inputLabel[if=Alloy.Globals.isPhablet]": {
    width: "110dp"
}

".inputLabel[if=Alloy.Globals.isTablet]": {

    width: "210dp"
}


".inputBox": {
    top: "2dp",
    left: "12dp",
    width: Ti.UI.SIZE,
    height: Ti.UI.SIZE
}

"#grid": {
    top: "24dp",
    width: Ti.UI.SIZE,
    height: Ti.UI.SIZE,
    horizontalWrap: false
}
"#grid[if=Alloy.Globals.isSmallHeight]" : {
    top: 0
}

".gridColumn": {
    width: Ti.UI.SIZE,
    height: Ti.UI.SIZE
}

"#nextButton": {
    right: "1%",
    bottom: "5%"
}