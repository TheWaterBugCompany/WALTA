
".container" : {
  backgroundColor: "#fff",
  backgroundImage: "/images/menu-background.png"
}

".container[if=Alloy.Globals.isSquare]": { 
  top: "10%",
  height: "60%" 
}

"#logInOrRegister" : {
  height: Ti.UI.SIZE,
  width: Ti.UI.SIZE,
  top: "10dp",
  right: "10dp",
  layout: "horizontal",
  zIndex: "1"
}

"#appVersion": {
  top:"10dp",
  left: "25dp",
  font: {
    fontSize: "12dp"
  },
  color: "#26849c"
}

"#logInLabel": {
  height: Ti.UI.SIZE,
  width: Ti.UI.SIZE,
  left: "20dp",
  right: "20dp",
  top: "20dp",
  bottom: "20dp"
}

"#bigOptions": {
  height: Ti.UI.FILL,
  width: Ti.UI.FILL
}



".bigMenuText": {
   font: {
    fontFamily: "Boulder",
    fontSize: "25dp"
  },
  color: "#26849c"
}

".bigMenuText[if=Alloy.Globals.isLowRes]": {
   font: {
    fontSize: "25dp"
  }
}

".bigMenuText[if=Alloy.Globals.isHighRes]": {
   font: {
    fontSize: "34dp"
  }
}

".bigMenuText[if=Alloy.Globals.isXHighRes]": {
   font: {
    fontSize: "60dp"
  }
}

"#detailed": {
  top: "15%",
  width: "55%",
  height: "50%"
}

"#detailedIconWrapper": {
  top: "-15%",
  left: "12%",
  width: "100%",
  height: "130%"
}

"#detailedIcon": {
  backgroundColor: "transparent",
  image: "/images/waterbug-survey-icon-alt.png",
  height: Ti.UI.FILL,
  width: Ti.UI.FILL,
  left: "5%",
  top: "0%"
}

"#detailedLabel": {
  top: "22%",
  left: "5%"
}

"#smallOptions": {
  height: "100dp",
  width: Ti.UI.SIZE,
  bottom: "8dp"
}

".smallButton": {
  height: Ti.UI.FILL,
  width: "100dp", 
  layout: "vertical",
  horizontalWrap: "false"
}

".smallButtonIcon" : {
  height: "65%",
  width: "60%"
}

".smallMenuText": {
   font: {
    fontFamily: "Boulder",
    fontSize: "14dp"
  },
  color: "#26849c"
}

".smallMenuText[if=Alloy.Globals.isLowRes]": {
   font: {
    fontSize: "14dp"
  }
}

"#smallOptions[if=Alloy.Globals.isHighRes]": {
  height: "150dp",
  width: "750dp"
}

".smallButton[if=Alloy.Globals.isHighRes]": {
  height: "150dp",
  width: "150dp" 
}

".smallMenuText[if=Alloy.Globals.isHighRes]": {
   font: {
    fontSize: "20dp"
  }
}

"#smallOptions[if=Alloy.Globals.isXHighRes]": {
  height: "200dp",
  width: "1000dp"
}

".smallButton[if=Alloy.Globals.isXHighRes]": {
  height: "200dp",
  width: "200dp" 
}

".smallMenuText[if=Alloy.Globals.isXHighRes]": {
   font: {
    fontSize: "30dp"
  }
}

"#helpIcon" : {
  backgroundColor: "transparent",
  image: "/images/help-icon.png",
}

"#mayflyIcon": {
  backgroundColor: "transparent",
  image: "/images/mayfly-muster-icon.png",
  width: "65%",
  height: "65%",
  top: "8%"
}

"#mayflyLabel": {
  top: "-9%"
}

"#identifyIcon" : {
  backgroundColor: "transparent",
  image: "/images/icon-magnify.png",
  width: "45%",
  height: "50%",
  bottom: "6%",
  top: "8%"
}

"#historyIcon" : {
  backgroundColor: "transparent",
  image: "/images/sample-history-icon.png",
}

"#galleryIcon" : {
  backgroundColor: "transparent",
  image: "/images/gallery-icon.png",
}

"#aboutIcon" : {
  backgroundColor: "transparent",
  image: "/images/about-icon.png",
}