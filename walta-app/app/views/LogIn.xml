<Alloy>
	<View id="content" class="container" layout="horizontal">
		<View id="leftPanel" class="panel" layout="vertical">
			<Label class="headingText" text="Log in with your existing account:"/>
			<Label class="error" text="Error message"/>
			<Label id="emailLabel" class="labelText" text="Email:"/>
			<TextField id="emailTextField" class="textField" accessibilityLabel="Email" />
			<Label id="passwordLabel" class="labelText" text="Password:"/>
			<TextField id="passwordTextField" class="textField password" accessibilityLabel="Password" />
			<Label id="logInButton" class="actionButton" passwordMask=true text="Log In" onClick="loginClick" />
		</View>
		<View id="rightPanel" class="panel" layout="vertical">
			<Label class="headingText" text="via social media:"/>
			<View id="socialMedia" layout="horizontal">
				<ImageView class="socialMediaImage" image="/images/twitter-icon.png"/>
				<ImageView class="socialMediaImage" image="/images/google-plus-icon.png"/>
				<ImageView class="socialMediaImage" image="/images/facebook-icon.png"/>
			</View>
			<Label id="registerHeading" class="headingText" textAlign=Ti.UI.TEXT_ALIGNMENT_CENTER text="or register with an email\n and password:"/>
			<Label id="registerButton" class="actionButton" text="Register" onClick="registerClick"/>
		</View>
	</View>
</Alloy>