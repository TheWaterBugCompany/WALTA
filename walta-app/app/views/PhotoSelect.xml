<Alloy>
	<View id="photoSelectBoundary">
		<View id="photoSelectInner">
			<View class="shrinkWrap">
				<ImageView id="photo" />
				<ActivityIndicator id="activity"/>
			</View>
			<Label id="photoSelectLabel" class="photoMessage" text="Please take a photo\nto continue"/>
			<Label id="photoSelectOptionalLabel"  class="photoMessage" text="Tap camera icon to\nadd a photo"/>
			<View id="iconHolder" class="shrinkWrap">
				<ImageView id="magnify" class="icon" accessibilityLabel="Magnify" onClick="openGallery"/>
				<ImageView id="camera" class="icon" accessibilityLabel="Take Photo" onClick="takePhoto"/>
			</View>
		</View>
	</View>
</Alloy>