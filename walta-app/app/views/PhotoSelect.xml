<Alloy>
	<View id="photoSelectBoundary">
		<View id="photoSelectInner" accessibilityLabel="photo_select">
			<ImageView id="photo" />
			<Label id="photoSelectLabel" class="photoMessage" text="Please take a photo\nto continue"/>
			<Label id="photoSelectOptionalLabel"  class="photoMessage" text="Tap camera to\nadd a photo"/>
			<View id="iconHolder" class="shrinkWrap">
				<ImageView id="magnify" class="icon" accessibilityLabel="photo_select_magnify_button" onClick="openGallery"/>
				<ImageView id="camera" class="icon" accessibilityLabel="photo_select_camera_button" onClick="takePhoto"/>
			</View>
		</View>
	</View>
</Alloy>