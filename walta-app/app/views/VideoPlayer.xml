<Alloy>
	<View id="content">
		<View id="closeButton" onClick="closeEvent" accessibilityLabel="Close" >
			<ImageView class="close_button_image"></ImageView>
		</View>
		<View id="playButton" onClick="playVideo" accessibilityLabel="Play" >
			<ImageView class="play_button_image"></ImageView>
		</View>
		<VideoPlayer id="videoPlayer" ns="Ti.Media" onClick="pauseVideo" onComplete="completeVideo"/>
	</View>
</Alloy>