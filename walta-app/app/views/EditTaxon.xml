<Alloy>
	<View class="overlay">
		<View id="window" class="window" layout="vertical">
			<View id="header" class="shrinkWrap">
				<Label id="taxonName" class="headingText" accessibilityLabel="edit_taxon_species_name" text="Taxonomic Identification"/>
				<View id="closeButton" onClick="closeEvent">
					<ImageView class="close_button_image" accessibilityLabel="close_button"></ImageView>
				</View>
			</View>
			<View id="howMany" layout="vertical">
				<Label id="howManyLabel" class="labelText" text="How many did you see?"/>
				<View id="abundance" class="shrinkWrap" layout="horizontal">
					<Slider id="abundanceValue" accessibilityLabel="edit_taxon_abundancy_slider" min="1" max="21" value="1" onChange="updateAbundance"/>
					<Label id="abundanceLabel" text="1-2" class="labelText"/>
				</View>
			</View>
			<View id="photoSelectWrapper">
				<Require type="view" src="PhotoSelect" cropPhoto=true id="photoSelect" />
			</View>
			<View id="buttons" layout="horizontal">
				<Button id="deleteButton" class="actionButton" title="Delete" accessibilityLabel="edit_taxon_delete" onClick="deleteEvent" />
				<Button id="saveButton" class="actionButton" title="Save" accessibilityLabel="edit_taxon_save" onClick="saveEvent"/>
			</View>
		</View>
	</View>
</Alloy>