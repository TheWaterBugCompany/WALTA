<Alloy autostyle="true">
	<View id="content" class="container">
			<View id="header" onClick="goUp">
				<Label id="title" class="headingText"></Label>
				<View id="upButton">
					<ImageView id="upButtonImage" ></ImageView>
				</View>
			</View>
			<ScrollView id="detailsBox">

				<Label id="scientificClassificationLabel" class="detailsHeading" text="Scientific Classification:"/>
				<View id="scientificClassification" class="field shrinkWrap" layout="vertical"/>
 
				<View layout="horizontal" class="field shrinkWrap">
					<Label class="detailsHeading" text="Size:"/>
					<Label id="size" class="detailsText"/>
				</View>

				<View layout="horizontal" class="field shrinkWrap">
					<Label class="detailsHeading" text="Habitat:"/>
					<Label id="habitat" class="detailsText"/>
				</View>

				<View layout="horizontal" class="field shrinkWrap">
					<Label class="detailsHeading" text="Movement:"/>
					<Label id="movement" class="detailsText"/>
				</View>

				<View layout="horizontal" class="field shrinkWrap">
					<Label class="detailsHeading" text="Confused with:"/>
					<Label id="confusedWith" class="detailsText"/>
				</View>

				<View layout="horizontal" class="field shrinkWrap">
					<Label id="signalScoreHeading" class="detailsHeading" text="SIGNAL score:"/>
					<Label id="signalScore" class="detailsText"/>
				</View>

				<Label id="description" class="detailsText"/>
				<View id="spacer"/>
			</ScrollView>
			<View id="actions">
				<View id="photoSelectWrapper">
					<Require type="view" readonly=true src="PhotoSelect" id="photoSelect" />
				</View>
				<View id="actionBtns"></View>
			</View>
	</View>
</Alloy>
