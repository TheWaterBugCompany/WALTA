<Alloy>
	<View class="overlay">
			<View class="window">
				<View layout="vertical"> 
					<View class="titlebar">
						<Label class="titleText">Tap and hold to change location:</Label>
						<Require id="closeButton" src="CloseButton"/>
					</View>
					<View id="content" layout="vertical">
						<Require type="view" src="LeafletMap" id="mapView" />
					</View> 
				</View>
				<View id="buttonBar" layout="horizontal">
					<View id="locateButton" class="actionButton" onClick="locateClick" >
						<ImageView id="locateButtonIcon" />
						<Label title=" " color="#b4d2d9"/>
					</View>
					
					<Button id="cancelButton" class="actionButton" title="  Close  " onClick="cancelClick" />
					<Button id="saveButton" class="actionButton" title="  Save  " onClick="saveClick" />
				</View>
			</View>
	</View>
</Alloy>