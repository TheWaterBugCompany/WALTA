<Alloy>
	<View id="content" layout="composite"> 
		<View id="wrapper2" layout="vertical">
			<View id="header">
				<Label id="question" class="labelText" text="Enter percentage of each habitat type below, note that total must be 100% before continuing."/>
			</View>
			<View id="grid" layout="horizontal">
				<View id="gridLeft" layout="vertical" class="gridColumn">
					<View class="inputBox" layout="horizontal">
						<Label text="Leaf Packs:" class="labelText inputLabel" />
						<TextField  id="leaves" class="textField" accessibilityLabel="Leaf Packs" onChange="validateSum" />
							
						<Label text="%" class="labelText" />
					</View>
					<View class="inputBox" layout="horizontal">
						<Label text="Aquatic Plants:" class="labelText inputLabel" />
						<TextField  id="plants" class="textField" accessibilityLabel="Aquatic Plants" onChange="validateSum" />
						<Label text="%" class="labelText" />
					</View>
					<View class="inputBox" layout="horizontal">
						<Label text="Wood:" class="labelText inputLabel" />
						<TextField  id="wood" class="textField"  accessibilityLabel="Wood" onChange="validateSum" />
						<Label text="%" class="labelText" />
					</View>
					<View class="inputBox" layout="horizontal">
						<Label text="Edge Plants:" class="labelText inputLabel" />
						<TextField  id="edgeplants" class="textField" accessibilityLabel="Edge Plants" onChange="validateSum" />
						<Label text="%" class="labelText" />
					</View>

				</View>
				<View id="gridRight" layout="vertical" class="gridColumn">
					<View class="inputBox" layout="horizontal">
						<Label text="Rocks:" class="labelText inputLabel" />
						<TextField id="rocks" class="textField" accessibilityLabel="Boulders" onChange="validateSum" />
						<Label text="%" class="labelText" />
					</View>
					<View class="inputBox" layout="horizontal">
						<Label text="Gravel:" class="labelText inputLabel" />
						<TextField id="gravel" class="textField" accessibilityLabel="Gravel" onChange="validateSum" />
						<Label text="%" class="labelText" />
					</View>
					<View class="inputBox" layout="horizontal">
						<Label text="Sand/Silt:" class="labelText inputLabel" />
						<TextField id="sandOrSilt" class="textField" accessibilityLabel="Sand Or Silt" onChange="validateSum"/>
						<Label text="%" class="labelText" />
					</View>
					<View class="inputBox" layout="horizontal">
						<Label text="Open Water:" class="labelText inputLabel" />
						<TextField  id="openwater" class="textField" accessibilityLabel="Open Water" onChange="validateSum" />
						<Label text="%" class="labelText" />
					</View>
				</View>
			</View>
		</View>
	</View>
</Alloy>