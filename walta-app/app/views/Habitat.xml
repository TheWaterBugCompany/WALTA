<Alloy>
	<View id="content" class="container" layout="vertical">
		<Label class="labelText" text="Enter percentage of each habitat type below, note that total must be 100% before continuing."/>
		<View id="grid" layout="horizontal" class="shrinkWrap">
			<View id="gridLeft" layout="vertical" class="gridColumn">
				<View class="inputBox" layout="horizontal">
					<Label text="Leaf Packs:" class="labelText inputLabel" />
					<TextField  id="leaves" class="textField" accessiblityLabel="Leaf Packs" onChange="validateSum" />
					<Label text="%" class="labelText" />
				</View>
				<View class="inputBox" layout="horizontal">
					<Label text="Aquatic Plants:" class="labelText inputLabel" />
					<TextField  id="plants" class="textField" accessiblityLabel="Aquatic Plants" onChange="validateSum" />
					<Label text="%" class="labelText" />
				</View>
				<View class="inputBox" layout="horizontal">
					<Label text="Wood:" class="labelText inputLabel" />
					<TextField  id="wood" class="textField"  accessiblityLabel="Wood" onChange="validateSum" />
					<Label text="%" class="labelText" />
				</View>
				<View class="inputBox" layout="horizontal">
					<Label text="Edge Plants:" class="labelText inputLabel" />
					<TextField  id="edgeplants" class="textField" accessiblityLabel="Edge Plants" onChange="validateSum" />
					<Label text="%" class="labelText" />
				</View>

			</View>
			<View id="gridRight" layout="vertical" class="gridColumn">
				<View class="inputBox" layout="horizontal">
					<Label text="Boulders:" class="labelText inputLabel" />
					<TextField id="rocks" class="textField" accessiblityLabel="Boulders" onChange="validateSum" />
					<Label text="%" class="labelText" />
				</View>
				<View class="inputBox" layout="horizontal">
					<Label text="Gravel:" class="labelText inputLabel" />
					<TextField id="gravel" class="textField" accessiblityLabel="Gravel" onChange="validateSum" />
					<Label text="%" class="labelText" />
				</View>
				<View class="inputBox" layout="horizontal">
					<Label text="Sand/Silt:" class="labelText inputLabel" />
					<TextField id="sandOrSilt" class="textField" accessiblityLabel="Sand Or Silt" onChange="validateSum"/>
					<Label text="%" class="labelText" />
				</View>
				<View class="inputBox" layout="horizontal">
					<Label text="Open Water:" class="labelText inputLabel" />
					<TextField  id="openwater" class="textField" accessiblityLabel="Open Water" onChange="validateSum" />
					<Label text="%" class="labelText" />
				</View>
			</View>
		</View>
		<View id="bottom">
			<Label id="nextButton" class="actionButton" text="Next" onClick="nextClick" />
		</View>
	</View>
</Alloy>