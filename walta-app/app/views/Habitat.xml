<Alloy>
	<View id="content" class="container" layout="vertical">
		<Label class="labelText" text="Enter percentage of each habitat type below, note that total must be 100% before continuing."/>
		<View id="grid" layout="horizontal" class="shrinkWrap">
			<View id="gridLeft" layout="vertical" class="gridColumn">
				<View class="inputBox" layout="horizontal">
					<Label text="Leaves:" class="labelText inputLabel" />
					<TextField  id="leaves" class="textField" accessiblityLabel="Leaves" />
				</View>
				<View class="inputBox" layout="horizontal">
					<Label text="Plants:" class="labelText inputLabel" />
					<TextField  id="plants" class="textField" accessiblityLabel="Plants" />
				</View>
				<View class="inputBox" layout="horizontal">
					<Label text="Wood:" class="labelText inputLabel" />
					<TextField  id="wood" class="textField" accessiblityLabel="Wood" />
				</View>

			</View>
			<View id="gridRight" layout="vertical" class="gridColumn">
				<View class="inputBox" layout="horizontal">
					<Label text="Rocks:" class="labelText inputLabel" />
					<TextField id="rocks" class="textField" accessiblityLabel="Rocks" />
				</View>
				<View class="inputBox" layout="horizontal">
					<Label text="Gravel:" class="labelText inputLabel" />
					<TextField id="gravel" class="textField" accessiblityLabel="Gravel" />
				</View>
				<View class="inputBox" layout="horizontal">
					<Label text="Sand/Silt:" class="labelText inputLabel" />
					<TextField id="sandOrSilt" class="textField" accessiblityLabel="Sand Or Silt" />
				</View>
			</View>
		</View>
		<View id="bottom">
			<Label id="nextButton" class="actionButton" text="Next" />
		</View>
	</View>
</Alloy>