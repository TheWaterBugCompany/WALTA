<Alloy>
	<ScrollView id="content">
		<View id="wrapper" layout="vertical"> 
			<View id="wrapper2" layout="vertical">
				<View id="header">
					<Label id="question" class="labelText" text="Enter percentage of each habitat type below, note that total must be 100% before continuing."/>
				</View>
				<View id="grid" layout="horizontal">
					<View id="gridLeft" layout="vertical" class="gridColumn">
						<View class="inputBox" layout="horizontal">
							<Label text="Leaf Packs:" class="labelText inputLabel" />
							<TextField  id="leaves" class="textField" accessibilityLabel="habitat_leaf_packs" onChange="validateSum" />
								
							<Label text="%" class="labelText" />
						</View>
						<View class="inputBox" layout="horizontal">
							<Label text="Aquatic Plants:" class="labelText inputLabel" />
							<TextField  id="plants" class="textField" accessibilityLabel="habitat_aquatic_plants" onChange="validateSum" />
							<Label text="%" class="labelText" />
						</View>
						<View class="inputBox" layout="horizontal">
							<Label text="Wood:" class="labelText inputLabel" />
							<TextField  id="wood" class="textField"  accessibilityLabel="habitat_wood" onChange="validateSum" />
							<Label text="%" class="labelText" />
						</View>
						<View class="inputBox" layout="horizontal">
							<Label text="Edge Plants:" class="labelText inputLabel" />
							<TextField  id="edgeplants" class="textField" accessibilityLabel="habitat_edge_plants" onChange="validateSum" />
							<Label text="%" class="labelText" />
						</View>

					</View>
					<View id="gridRight" layout="vertical" class="gridColumn">
						<View class="inputBox" layout="horizontal">
							<Label text="Rocks:" class="labelText inputLabel" />
							<TextField id="rocks" class="textField" accessibilityLabel="habitat_boulders" onChange="validateSum" />
							<Label text="%" class="labelText" />
						</View>
						<View class="inputBox" layout="horizontal">
							<Label text="Gravel:" class="labelText inputLabel" />
							<TextField id="gravel" class="textField" accessibilityLabel="habitat_gravel" onChange="validateSum" />
							<Label text="%" class="labelText" />
						</View>
						<View class="inputBox" layout="horizontal">
							<Label text="Sand/Silt:" class="labelText inputLabel" />
							<TextField id="sandOrSilt" class="textField" accessibilityLabel="habitat_sand_or_silt" onChange="validateSum"/>
							<Label text="%" class="labelText" />
						</View>
						<View class="inputBox" layout="horizontal">
							<Label text="Open Water:" class="labelText inputLabel" />
							<TextField  id="openwater" class="textField" accessibilityLabel="habitat_open_water" onChange="validateSum" />
							<Label text="%" class="labelText" />
						</View>
					</View>
				</View>
			</View>
			<View id="buttons">
				<Button id="nextButton" class="actionButton" title="Next" accessibilityLabel="habitat_next" onClick="nextClick" />
			</View>
		</View>
	</ScrollView>
</Alloy>