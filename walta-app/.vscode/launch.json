    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Unit Test Debug on Android",
            "type": "titanium",
            "request": "launch",
            "platform": "android",
            "preLaunchTask": "walta-unit-test",
            // Use JavaScript source maps (if they exist).
            "sourceMaps": true,
            // If JavaScript source maps are enabled, the generated code is expected in this directory.
            "outDir": "${workspaceRoot}/walta-app/build/android/assets"
        },
        {
            "name": "Launch on iOS",
            "type": "titanium",
            "request": "launch",
            "platform": "ios",
            "preLaunchTask": "debug-ios-unit-test"
        }
    ]
}